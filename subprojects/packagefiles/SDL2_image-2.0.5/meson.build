project('sdl2-image', 'c')

feature_args = ['-DLOAD_BMP', '-DLOAD_PNG', '-DLOAD_JPG', '-DSDL_IMAGE_USE_COMMON_BACKEND']

sdl2_dep = dependency('sdl2')
png_dep = dependency('libpng')
jpeg_dep = dependency('libjpeg')

sdl2_image_lib = static_library('sdl2image',
  'IMG.c',
  'IMG_bmp.c',
  'IMG_gif.c',
  'IMG_jpg.c',
  'IMG_lbm.c',
  'IMG_pcx.c',
  'IMG_png.c',
  'IMG_pnm.c',
  'IMG_svg.c',
  'IMG_tga.c',
  'IMG_tif.c',
  'IMG_webp.c',
  'IMG_WIC.c',
  'IMG_xcf.c',
  'IMG_xpm.c',
  'IMG_xv.c',
  'IMG_xxx.c',
  c_args: feature_args,
  dependencies: [png_dep, jpeg_dep, sdl2_dep])

sdl2_image_dep = declare_dependency(include_directories: '.',
  link_with: sdl2_image_lib)
